{
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@now/node-server"
    },
    {
      "src": "client/package.json",
      "use": "@now/static-build"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/"
    },
    { "src": ".*", "dest": "/client/build" }
  ],
  "env": {
    "MONGODB_URI": "@mongodb-uri",
    "GITHUB_CLIENT_ID": "@github-id",
    "GITHUB_CLIENT_SECRET": "@github-secret"
  }
}
